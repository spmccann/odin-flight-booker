<% if @matching_flights.count.positive? %>
  <%= form_with  do |f| %>
    <% num = 1 %>
    <% @matching_flights.each do |flight|%>
      <%= f.radio_button :flight, "radio#{num}" %> 
      <%= f.label :flight_option, "#{flight.duration/60/60} hrs flight, #{flight.departure_airport.code} to #{flight.arrival_airport.code} leaving at #{flight.datetime}", for: "flight_radio#{num}" %> <br> <br>
      <% num += 1 %>
    <% end %>
    <%= f.submit 'Select Flight' %>
  <% end%>
<% else %>
  No flights found. Please try searching again.
<% end %>